<UserControl x:Class="ItBolt.WPF.Views.UdvozloView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItBolt.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,50,20,0">
            <Label FontSize="25">Üdvözlet az alkalmazásban!</Label>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Label>Válassz a lehetőségek közül a menü panelen.</Label>
        </Grid>
    </Grid>
</UserControl>
