<UserControl x:Class="ItBolt.WPF.ViewModels.AddBoltView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItBolt.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Label FontSize="20" HorizontalAlignment="Center" Content="Bolt hozzáadása"/>
        <Label Content="Bolt neve: " />
        <TextBox>
            <TextBox.Text>
                <Binding Path="SelectedBolt.bolt_neve" />
            </TextBox.Text>
        </TextBox>
        <Label Content="Bolt címe: " />
        <TextBox>
            <TextBox.Text>
                <Binding Path="SelectedBolt.bolt_cime" />
            </TextBox.Text>
        </TextBox>
        <Label Content="Bolt Nyitvatartási idő: " />
        <TextBox>
            <TextBox.Text>
                <Binding Path="SelectedBolt.nyitvatartasi_ido" />
            </TextBox.Text>
        </TextBox>
        
    </Grid>
</UserControl>
