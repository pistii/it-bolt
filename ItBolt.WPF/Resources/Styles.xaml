            </Style>
            <Style TargetType="Button" x:Key="btnStyle">
                <Setter Property="Width" Value="100"/>
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Margin" Value="2" />
            </Style>
        </Style.Resources>
    </Style>
